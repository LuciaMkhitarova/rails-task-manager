<h1>Tasks#index</h1>
<p>Find me in app/views/tasks/index.html.erb</p>

<% @tasks.each do |task| %>
  <h2><%= task.name %></h2>
  <p><%= task.done %></p>

  <%= link_to "Show", task_path(task) %>
  <%= link_to "Edit", task_path(task) %>
  <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
  <%= link_to task.name, task_path(task) %>

<% end %>
